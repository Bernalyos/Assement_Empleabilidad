{
  "version": 2,
  "name": "nextask-frontend",
  "cleanUrls": true,
  "trailingSlash": false,
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://your-backend-api-url.com/api/:path*"
    },
    {
      "source": "/css/:path*",
      "destination": "/src/main/resources/static/css/:path*"
    },
    {
      "source": "/js/:path*",
      "destination": "/src/main/resources/static/js/:path*"
    },
    {
      "source": "/((?!api|css|js).*)",
      "destination": "/src/main/resources/static/index.html"
    }
  ]
}

